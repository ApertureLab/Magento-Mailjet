<script type="text/javascript">
    //<![CDATA[
    function showSmtpTestMessage(txt, type) {
        var html = '<ul class="messages"><li class="'+type+'-msg"><ul><li>' + txt + '</li></ul></li></ul>';
        $('smtp-test-messages').update(html);
    }
    function smtp_test() {
        new Ajax.Request('<?php echo $this->getAjaxTestUrl() ?>', {
            method: 'get',
            onSuccess: function(transport){
                if (transport.responseJSON){
                    var json = transport.responseJSON;
                    showSmtpTestMessage(json.message, json.status);
                }
            }
        });
    }
    //]]>
</script>
<?php echo $this->getButtonHtml() ?><div id="smtp-test-messages"></div>