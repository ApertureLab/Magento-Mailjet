<config>
    <modules>
        <Narno_Mailjet>
            <version>0.0.1</version>
        </Narno_Mailjet>
    </modules>
    <admin>
        <routers>
            <Narno_Mailjet>
                <use>admin</use>
                <args>
                    <module>Narno_Mailjet</module>
                    <frontName>mailjet</frontName>
                </args>
            </Narno_Mailjet>
        </routers>
    </admin>
    <global>
        <helpers>
            <narno_mailjet>
                <class>Narno_Mailjet_Helper</class>
            </narno_mailjet>
        </helpers>
        <blocks>
            <narno_mailjet>
                 <class>Narno_Mailjet_Block</class>
            </narno_mailjet>
        </blocks>
        <models>
             <narno_mailjet>
                  <class>Narno_Mailjet_Model</class>
             </narno_mailjet>
             <core>
                 <rewrite>
                     <email_template>Narno_Mailjet_Model_Template</email_template>
                 </rewrite>
             </core>
        </models>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Narno_Mailjet>
                    <files>
                        <default>Narno_Mailjet.csv</default>
                    </files>
                </Narno_Mailjet>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <mailjet after="Mage_Adminhtml">Narno_Mailjet_Adminhtml</mailjet>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <mailjet>
            <smtp>
                <enabled>0</enabled>
                <host>in.mailjet.com</host>
                <port>587</port>
                <ssl>tls</ssl>
            </smtp>
        </mailjet>
    </default>
</config>